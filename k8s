# /tests/test_app.py

import unittest
from wsgi import create_app  # Import create_app from wsgi.py

class TestEngExcellenceApp(unittest.TestCase):
    @classmethod
    def setUpClass(cls):
        """This method runs once for the entire test class."""
        app = create_app().app
        app.config['TESTING'] = True  # Set testing mode on
        cls.client = app.test_client()  # Create test client once for the whole class

    def test_health(self):
        """Test the /health endpoint."""
        response = self.client.get('/health')
        self.assertEqual(response.status_code, 200)
        self.assertEqual(response.json, {"status": "healthy"})

    def test_hello(self):
        """Test the /hello endpoint."""
        response = self.client.get('/hello')
        self.assertEqual(response.status_code, 200)
        self.assertEqual(response.json, {"message": "Hello, Engineers!"})

if __name__ == '__main__':
    unittest.main()
